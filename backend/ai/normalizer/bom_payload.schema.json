{
  "type": "object",
  "required": ["doc_id", "items", "units", "meta"],
  "properties": {
    "doc_id": { "type": "string" },
    "units": { "type": "string", "enum": ["imperial", "metric"] },
    "meta": {
      "type": "object",
      "properties": {
        "source_pages": { "type": "array", "items": { "type": "integer" } },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": false
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["part_type", "material", "qty", "dims"],
        "properties": {
          "part_type": { "type": "string" },
          "material":  { "type": "string" },
          "grade":     { "type": ["string", "null"] },
          "qty":       { "type": "number" },
          "dims": {
            "type": "object",
            "properties": {
              "thickness_in": { "type": ["number", "null"] },
              "width_in":     { "type": ["number", "null"] },
              "length_in":    { "type": ["number", "null"] },
              "od_in":        { "type": ["number", "null"] },
              "id_in":        { "type": ["number", "null"] }
            },
            "additionalProperties": false
          },
          "weld": {
            "type": "object",
            "properties": {
              "process":   { "type": ["string", "null"] },
              "length_in": { "type": ["number", "null"] },
              "symbol":    { "type": ["string", "null"] }
            },
            "additionalProperties": false
          },
          "notes": { "type": ["string", "null"] },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
